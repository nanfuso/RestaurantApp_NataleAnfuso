<h1>Signup!</h1>

<%= form_tag "/users", method: :post do %>

    <div class="form_group">
        <h4>Name: </h4> 
        <%= text_field_tag :name %>
    </div>

    <div class="form_group">
        <h4>Email: </h4>
        <%= text_field_tag :email %>
    </div>

    <div class="form_group">
        <h4>Password: </h4><%= password_field_tag :password %>
    </div>

    <div class="form_group">
        <h4>Password Confirmation: </h4>
        <%= password_field_tag :password_confirmation %>
    </div>

    <%= submit_tag "Create Account", :class => "btn btn-default" %>
<% end %>